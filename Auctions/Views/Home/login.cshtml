@model Auctions.Models.account
@{
    ViewBag.Title = "Login";
}
<section id="form">
    <!--form-->
    <div class="container">

        <div class="row">
            <div class="col-sm-4 col-sm-offset-1">
                <div class="login-form">
                    <h2>Login</h2>


                    @using (Html.BeginForm("Login", "Home", FormMethod.Post))
                    {

                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        if (ViewBag.Message != null)
                        {
                            <div style="border:1px solid red">
                                @ViewBag.Message
                            </div>
                        }

                        <table>
                            <tr>
                                <td><h2>@Html.LabelFor(u => u.nick)</h2></td>
                                <td>@Html.TextBoxFor(u => u.nick)</td>
                                <td>@Html.ValidationMessageFor(u => u.nick)</td>
                            </tr>
                            <tr>
                                <td>  <h2>    @Html.LabelFor(u => u.password)</h2> </td>
                                <td>   @Html.PasswordFor(u => u.password)  </td>
                                <td>       @Html.ValidationMessageFor(u => u.password) </td>
                            </tr>
                            <tr>
                                <td></td>
                                <td>
                                    <input type="submit" value="Login" class="btn btn-default"/>
                                </td>
                                <td></td>
                            </tr>
                        </table>
                        <div class="col-sm-4">
                            <div class="signup-form">
                                <!--sign up form-->
                               
                            </div><!--/sign up form-->
                        </div>

                    }
                </div><!--/login form-->
            </div>
            <div class="col-sm-1">
                <h2 class="or">OR</h2>
            </div>
            <div class="col-sm-4">
                <div class="signup-form">
                    <!--sign up form-->
                    <h2>New User Signup!</h2>
                    <form action="registr">
                        
                        <button type="submit" class="btn btn-default">Registr</button>
                    </form>
                </div><!--/sign up form-->
            </div>
        </div>
    </div>
</section><!--/form-->
@section Scripts{
    @Scripts.Render("~/bundles/jqueryval");
}
