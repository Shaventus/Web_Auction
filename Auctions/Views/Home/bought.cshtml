
@model IEnumerable<Auctions.Models.buy>

@{
    ViewBag.Title = "Kupione";
}

<h2></h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-sm-3">
            <div class="left-sidebar">
                <h2>Moje konto</h2>
                <div class="panel-group category-products" id="accordian">
                    <!--category-productsr-->

                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4 class="panel-title"> <a @Html.ActionLink("Moje aukcje", "MyAuctions", "home")> </a> </h4>
                        </div>
                    </div>
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4 class="panel-title"><a @Html.ActionLink("Obserwowane", "observed", "home")> </a></h4>
                        </div>
                    </div>
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4 class="panel-title"><a @Html.ActionLink("E-booki", "ebooks", "home")></a></h4>
                        </div>
                    </div>
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4 class="panel-title"><a @Html.ActionLink("Pay-U", "payu", "home")></a></h4>
                        </div>
                    </div>
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4 class="panel-title"><a @Html.ActionLink("Kupione", "bought", "home")></a></h4>
                        </div>
                    </div>
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4 class="panel-title"><a @Html.ActionLink("Komentarze", "comments", "home")></a></h4>
                        </div>
                    </div>
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4 class="panel-title"><a @Html.ActionLink("Edytuj dane", "profile", "home")></a></h4>
                        </div>
                    </div>
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4 class="panel-title"><a @Html.ActionLink("Ustawienia zakupów", "shoppingSettings", "home")></a></h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!--/category-products-->

        <div class="col-sm-9 padding-right">
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.date)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.item.name)
                    </th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.date)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.item.name)
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>

}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
